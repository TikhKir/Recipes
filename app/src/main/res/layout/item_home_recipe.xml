<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:layout_marginTop="@dimen/margin_small"
    android:layout_height="@dimen/item_home_recipe_height"
    android:layout_marginHorizontal="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recipe_item_image"
            android:layout_width="@dimen/item_home_recipe_height"
            android:layout_height="match_parent"
            android:contentDescription="@string/photo_of_recipe"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recipe_title"
                style="@style/RecipeStyle.Text.Primary"
                android:ellipsize="end"
                android:maxLines="5"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/tv_recipe_description"
                style="@style/RecipeStyle.Text.Secondary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="@tools:sample/lorem/random" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>