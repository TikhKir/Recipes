<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_similar"
    android:layout_width="@dimen/item_similar_width"
    android:layout_height="@dimen/item_similar_height"
    android:layout_marginVertical="@dimen/cover_limiter"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_similar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_similar_width"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_item_similar"
            style="@style/RecipeStyle.Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_smallest"
            android:layout_marginVertical="@dimen/margin_smallest"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            tools:text="@tools:sample/lorem/random" />


    </LinearLayout>


</androidx.cardview.widget.CardView>